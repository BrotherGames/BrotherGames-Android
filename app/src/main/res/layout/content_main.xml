<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondobg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cosw.eci.brothergames_android.brothergames_android.ui.activity.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="558dp"
        android:layout_gravity="center"
        android:background="#E0E0E0"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        android:paddingLeft="29dp"
        android:paddingRight="29dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="168dp"
            android:layout_height="174dp"
            android:background="#E0E0E0"
            android:foregroundGravity="center"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/logo1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="Consulta el Videojuego que desees !"
            android:textColor="@color/colorTexto"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/videojuego"
            android:layout_width="282dp"
            android:layout_height="43dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="30dp"
            android:background="#A0A0A0"
            android:hint="Nombre Videojuego"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/searchgame"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buscar"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:text="BUSCAR" />

    </LinearLayout>


</RelativeLayout>
